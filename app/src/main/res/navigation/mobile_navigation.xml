<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mousse.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/pantalla_de_recomenacions" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.mousse.ui.buscar.BuscarFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.mousse.ui.crear_receta.CrearRecetaFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/creacio_receptes" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.mousse.ui.perfil.PerfilFragment"
        android:label="@string/title_perfil"
        tools:layout="@layout/usuarios_perfil" />
