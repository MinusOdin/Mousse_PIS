<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    app:srcCompat="@drawable/plato"
                    tools:srcCompat="@drawable/plato" />

                <LinearLayout
                    android:id="@+id/topLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textUsuari"
                        android:layout_width="235dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Usuario"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/imageButtonLike"
                        android:layout_width="13dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/like_sin" />

                    <ImageButton
                        android:id="@+id/imageButtonFav"
                        android:layout_width="13dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/fav_sin" />

                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/botons_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonPasAPas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Cocinar Paso a Paso"
                    android:textSize="13dp" />

                <ToggleButton
                    android:id="@+id/toggleButtonNoHecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Hecha"
                    android:textOff="No hecha"
                    android:textOn="Hecha"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textNomReceta"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:text="Nombre de la Receta"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion" />

            <TextView
                android:id="@+id/textHashtags"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:text="Hashtags"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/ingredientsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textIngredientes"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:text="Ingredientes"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pasosLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPasos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pasos a seguir:"
                    android:textSize="30sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerPasos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>